{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "paths": {
            "@angular/core": ["node_modules/@angular/core"]
        },
        "rootDir": ".",
        "outDir": "lib",
        "sourceMap": true,
        "inlineSources": true,
        "target": "es5",
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "files": [
        "./src/dynamic.ts",
        "./index.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true
    }
}
